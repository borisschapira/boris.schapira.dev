{%- unless jekyll.environment == "development" -%}
  {%- if include.caption -%}
    {%- capture img_code -%}{%- cloudinary {{ include.path }} loading="lazy" alt="{{ include.alt | escape }}" caption="{{ include.caption | replace: '"', '&quot;' }}" -%}{%- endcapture -%}
  {%- else -%}
    {%- capture img_code -%}{%- cloudinary {{ include.path }} loading="lazy" alt="{{ include.alt | escape }}" -%}{%- endcapture -%}
  {%- endif -%}
{%- else -%}
  {%- capture img_code -%}<img src="{{ include.path }}" loading="lazy" alt="{{ include.alt | escape }}">{%- endcapture -%}
  {%- if include.caption -%}
    {%- capture img_code -%}{{ img_code }}<figcaption>{{ include.caption | markdownify }}</figcaption>{%- endcapture -%}
    {%- capture img_code -%}<figure>{{ img_code }}</figure>{%- endcapture -%}
  {%- endif -%}
{%- endunless -%}{{ img_code }}
