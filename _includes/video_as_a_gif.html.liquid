  <div class="videoWrapper{% unless include.controls %} gif{% endunless %}" ><video playsinline {% if include.controls %} controls{% endif %} preload="metadata"{% unless include.controls %} loop="loop"{% endunless %} poster="{% unless include.url %}{{ page.url }}{{ include.slug }}{% else %}{{ include.url }}{% endunless %}.jpg"{% if include.alt %} aria-describedBy="{{ the-guid }}"{% endif %}>
  <source src="{% unless include.url %}{{ page.url }}{{ include.slug }}{% else %}{{ include.url }}{% endunless %}.mp4" type="video/mp4" />
  {% if include.alt %}<span id="{{ the-guid }}">{{ include.alt }}</span>{% endif %}
  </video></div>
  {% if include.caption %}<figcaption>{{ include.caption }}</figcaption>{% endif %}
</figure>