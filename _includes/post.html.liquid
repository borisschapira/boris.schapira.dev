{% if include.postPage %}
  {% assign post = page %}
{% endif %}

{% assign source = page.path | split: '/' %}
{% assign folderName = source.last | split: '.' | first %}
{% assign title_encoded = post.title | url_encode %}
{% capture url %}{{ site.url | append:page.base-url | append:post.url }}{% endcapture %}

<article class="post h-entry" itemscope itemtype="https://schema.org/BlogPosting"{% if include.postPage %} id="content"{% endif %}>
    <header class="p-header">
        {% assign datetime = post.date | date_to_xmlschema %}
        <time class="p-date dt-published" datetime="{{ datetime }}">{% unless page.lang =='fr' %}{% include date_en.html.liquid postDate=post.date pageLang=page.lang %}{% else %}{{ post.date | localize: '%A %-d', page.lang }} <a href="{{ site.base-url }}{{ post.date | localize: '%Y/%m/', page.lang }}" title="{% t Articles de %} {{ post.date | localize: '%B %Y', page.lang }}">{{ post.date | localize: '%B', page.lang }}</a> <a href="{{ site.base-url }}{{ post.date | localize: '%Y/', page.lang }}" title="{% t Articles de %} {{ post.date | localize: '%Y', page.lang }}">{{ post.date | localize: '%Y' }}</a>{% endunless %}</time>{% if post.category != 'default' %}<span class="p-category"><a href="{{ page.base-url }}/{{post.category|downcase}}/">{{ post.category }}</a></span>{% endif %}{% include reading_time.html.liquid content=post.content %}<span class="p-author h-card">{{ site.author.name }}</span>
    </header>

  {% capture hn %}h2{% endcapture %}
  {% unless page.hideCustomHead %}
    {% capture hn %}h3{% endcapture %}
  {% endunless %}

  <{{hn}} class="post-title p-name">
    {% if include.postPage %}
        {{ post.title }}
    {% else %}
    <a href="{{ post.url }}">{{ post.title }}</a>
    {% endif %}
  </{{hn}}>

  <div class="post-content">
    {% if include.postPage %}
      {{ post.content }}
      {% include post_footer.html.liquid content=post.content %}
    {% else %}
      {% if post.content contains "<!-- more -->" %}
        {{ post.content | split:"<!-- more -->" | first | markdownify % }}
        <p>
          <a href="{{ post.url }}" title="{{post.title}}">{% t Lire la suite %} →</a>
        </p>
      {% elsif post.content.size < 1000 %}
        {% if post.content contains "<figure>" %}
          {{ post.content | split:"<figure>" | first | markdownify % }}
          <p>
            <a href="{{ post.url }}" title="{{post.title}}">{% t Lire la suite %} →</a>
          </p>
        {% else %}
          {{ post.content | markdownify }}
        {% endif %}
      {% else %}
        {{ post.excerpt | markdownify }}
        <p>
          <a href="{{ post.url }}" title="{{post.title}}">{% t Lire la suite %} →</a>
        </p>
      {% endif %}
    {% endif %}
  </div>
</article>
