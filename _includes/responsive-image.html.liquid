    {% for i in resized %}
        {{ site.url }}/{{ i.path }} {{ i.width }}w,
    {% endfor %}
{% endcapture %}

<img src="{{ site.url }}/{{ path }}" srcset="{{ srcset | strip_newlines }} {{ site.url }}/{{ original.path }} {{ original.width }}w" sizes="(min-width:20em) and (max-width:50em) 20em, (min-width:50em) 30em" alt="{{ alt }}" />
