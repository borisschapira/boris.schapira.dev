{% if include.posts.size >= 1 %}
<div class="related">
    <h2>{% t Ces articles peuvent également vous intéresser %}</h2>
    <ul>
    {% for related in include.posts limit: 5 %}
        <li class="relatedPost">
            <a href="{{ related.url }}">{{ related.title }}
            {% if related.series %}
                ({% t Série %}: {{ related.series }})
            {% endif %}
            </a>
        </li>
    {% endfor %}
    </ul>
</div>
{% endif %}
