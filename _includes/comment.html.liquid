{% comment %}
  Completly snatched from Michael Rose's MadeMistake blog post https://mademistakes.com/articles/improving-jekyll-static-comments/
{% endcomment %}
<article id="comment{% unless include.r %}{{ index | prepend: '-' }}{% else %}{{ include.index | prepend: '-' }}{% endunless %}" class="js-comment comment {% if include.name == site.author.name %}admin{% endif %} {% unless include.replying_to == 0 %}child{% endunless %}">
  <header>
  {% if include.avatar %}
    <img src="{{ include.avatar }}" alt="{{ include.name | escape }}">
  {% elsif include.email %}
    <img src="https://www.gravatar.com/avatar/{{ include.email }}?d=mm&s=60" srcset="https://www.gravatar.com/avatar/{{ include.email }}?d=mm&s=120 2x" alt="{{ include.name | escape }}">
  {% else %}
    <img src="https://www.gravatar.com/avatar/?d=mm&s=60" srcset="https://www.gravatar.com/avatar/?d=mm&s=120 2x" alt="{{ include.name | escape }}">
  {% endif %}
  {% if include.date %}
    {% if include.index %}<a href="#comment{% if r %}{{ index | prepend: '-' }}{% else %}{{ include.index | prepend: '-' }}{% endif %}" title="{% t Lien direct vers ce commentaire %}" class="npe">{% endif %}
    <time datetime="{{ include.date | date_to_xmlschema }}">{{ include.date | date: '%d/%m/%Y' }}</time>
    {% if include.index %}</a>{% endif %}
  {% endif %}
  <h3>
    {% unless include.url == blank %}<a rel="external nofollow" href="{{ include.url }}" class="npe">{% endunless %}
        {{ include.name }}
    {% unless include.url == blank %}</a>{% endunless %}
  </h3>
  </header>
  <div class="comment__content">
    {{ include.message | markdownify }}
  </div>
  {% unless include.replying_to != 0 or page.comments_locked == true %}
    <div class="comment__reply">
      <a rel="nofollow" class="btn btn--inverse" href="#comment-{{ include.index }}" onclick="return addComment.moveForm('comment-{{ include.index }}', '{{ include.index }}', 'respond', '{{ page.slug }}')">{% t Répondre à %} {{ include.name }}</a>
    </div>
  {% endunless %}
</article>

{% capture i %}{{ include.index }}{% endcapture %}
{% assign replies = site.data.comments[page.slug] | where_exp: 'item', 'item.replying_to == i' %}
{% for reply in replies %}
  {% assign index       = forloop.index | prepend: '-' | prepend: include.index %}
  {% assign r           = reply.replying_to %}
  {% assign replying_to = r | to_integer %}
  {% assign avatar      = reply.avatar %}
  {% assign email       = reply.email %}
  {% assign name        = reply.name %}
  {% assign url         = reply.url %}
  {% assign date        = reply.date %}
  {% assign message     = reply.message %}
  {% include comment.html.liquid index=index replying_to=replying_to avatar=avatar email=email name=name url=url date=date message=message %}
{% endfor %}