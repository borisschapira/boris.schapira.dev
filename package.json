{
  "name": "boris-schapira-dev-jekyll",
  "version": "1.0.0",
  "description": "My Jekyll setup.",
  "scripts": {
    "pretty:css": "prettier --write '_src/styles/scss/**/*.scss'",
    "pretty:md": "prettier --write '{,!(vendor)/**/*.md}'",
    "pretty:js": "prettier --write '_src/scripts/**/*.js'",
    "pretty": "npm-run-all 'pretty:*'",
    "build": "webpack",
    "postbuild": "node ./scripts/compute-hashes.js",
    "test:feeds": "node ./scripts/validate-feeds.js",
    "test:visual": "mocha --timeout 15000 scripts/visual-regression.js",
    "watch": "npm-scripts-watcher"
  },
  "watch": {
    "_src/styles/scss/**/*.scss": [
      "pretty:css",
      "build"
    ],
    "_src/scripts/**/*.js": [
      "pretty:js",
      "build"
    ],
    "_posts/**/2019/*.md": [
      "prettier --write '{,!(vendor)/**/2019/*.md}'"
    ]
  },
  "config": {
    "css_dir": "_src/styles/css/",
    "scss_dir": "_src/styles/scss/",
    "dist_dir": "assets/styles/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/borisschapira/jekyll-bs.git"
  },
  "author": "borisschapira",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/borisschapira/jekyll-bs/issues"
  },
  "homepage": "https://github.com/borisschapira/jekyll-bs#readme",
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "abbr-touch": "^2.1.6",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "blurhash": "^1.1.3",
    "canvas": "^2.8.0",
    "concat-cli": "^4.0.0",
    "csswring": "^6.0.3",
    "easy-toggle-state": "^1.16.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-chai-expect": "^2.2.0",
    "eslint-plugin-import": "^2.23.3",
    "fast-xml-parser": "^3.19.0",
    "first-input-delay": "^0.1.3",
    "globby": "^11.0.3",
    "hashmap": "^2.4.0",
    "include-media": "^1.4.10",
    "node-sass": "^6.0.0",
    "normalize-scss": "^7.0.1",
    "npm": "^7.14.0",
    "npm-run-all": "^4.1.5",
    "npm-scripts-watcher": "^1.0.2",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "postcss-loader": "^5.3.0",
    "prettier": "^2.3.0",
    "purify-css": "^1.2.5",
    "sass": "^1.34.0",
    "sass-loader": "^11.1.1",
    "uglify-js": "^3.13.7",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "escape-string-regexp": "^5.0.0",
    "file-loader": "^6.2.0",
    "hasha": "^5.2.2",
    "instant.page": "^5.1.0",
    "js-md5": "^0.7.3",
    "js-yaml": "^4.1.0",
    "mkdirp": "^1.0.4",
    "mocha": "^8.4.0",
    "pixelmatch": "^5.2.1",
